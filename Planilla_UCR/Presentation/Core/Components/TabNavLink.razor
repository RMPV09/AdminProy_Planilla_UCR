
<li class="nav-item px-3">
    <NavLink class="nav-link" href=@href Match="NavLinkMatch.All">
        <MudIconButton Size="Size.Medium"  Disabled="true"></MudIconButton>
         <MudIconButton Icon="@Icon" Color="@Color.Secondary" Class="mr-2"/>
        <span  aria-hidden="true"></span> <MudText> @text </MudText>
            <MudSpacer></MudSpacer>
    </NavLink>
</li>

@code{
    [Parameter]
    public string href { get; set; } 
    [Parameter]
    public string text { get; set; } 
    [Parameter]
    public string Icon { get; set; } 
}